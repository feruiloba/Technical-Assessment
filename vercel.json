{
  "builds": [
    {
      "src": "api/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "app/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    { "src": "/projects(.*)", "dest": "/api/main.py" },
    { "src": "/detect-faces", "dest": "/api/main.py" },
    { "src": "/upload", "dest": "/api/main.py" },
    { "src": "/hello-world", "dest": "/api/main.py" },
    { "src": "/(.*)", "dest": "/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}